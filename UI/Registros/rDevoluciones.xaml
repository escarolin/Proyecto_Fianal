<Window x:Class="Proyecto_Final.UI.Registros.rDevoluciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Final.UI.Registros"
        mc:Ignorable="d"
        Title="Registro Devoluciones" Height="670" Width="500" WindowStartupLocation="CenterScreen" Icon="/Imagenes/reg.png" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="15">
        <!--——————————————————————————————————————————————[ BUSCAR ]——————————————————————————————————————————————-->
        <Label Content="Cliente Id" FontWeight="Bold" FontSize="15"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="ClienteIdTextBox" Text="{Binding ClienteId}" Width="120" FontSize="18" FontWeight="Bold" VerticalContentAlignment="Center"/>
            <!--—————————————————————————————[ Boton Buscar ]—————————————————————————————-->
            <Button x:Name="BuscarButton" Margin="100,0,0,0" Width="110" Click="BuscarButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Height="30" Source="/Imagenes/Buscar.png" />
                    <Label Content="Buscar" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <!--——————————————————————————————————————————————[ DevolucionesId ]——————————————————————————————————————————————-->
        <Label Content="DevolucionesId" FontWeight="Bold" Margin="0,5,0,0"/>
        <TextBox x:Name="DevolucionIdTextBox" Text="{Binding DevolucionId}" Height="30" VerticalContentAlignment="Center"/>

        <!--——————————————————————————————————————————————[ClienteId ]——————————————————————————————————————————————-->
        <Label Content="ClienteId" FontWeight="Bold" Margin="0,5,0,0"/>
        <TextBox x:Name="ClienteIdTextBox" Text="{Binding ClienteId}" Height="30" VerticalContentAlignment="Center"/>
        <!--——————————————————————————————————————————————[ VentaId ]——————————————————————————————————————————————-->
        <Label Content="VentaId" FontWeight="Bold" Margin="0,5,0,0"/>
        <TextBox x:Name="VentaIdTextBox" Text="{Binding VentaId}" Height="30" MaxLength="10"  VerticalContentAlignment="Center"/>
        <!--——————————————————————————————————————————————[ ProdcutoId ]——————————————————————————————————————————————-->
        <Label Content="ProductoId" FontWeight="Bold" Margin="0,5,0,0"/>
        <TextBox x:Name="ProductoIdTextBox" Text="{Binding ProductoId}" Height="30" VerticalContentAlignment="Center"/>
        <!--——————————————————————————————————————————————[ UsuarioId ]——————————————————————————————————————————————-->
        <Label Content="UsuarioId" FontWeight="Bold" Margin="0,5,0,0"/>
        <TextBox x:Name="UsuarioIdTextBox" Text="{Binding UsuarioId}" Height="30" VerticalContentAlignment="Center"/>
        <!--——————————————————————————————————————————————[ Fecha ]——————————————————————————————————————————————-->
        <Label Content="Fecha " FontWeight="Bold" Margin="0,5,0,0"/>
        <DatePicker x:Name="FechaDatePicker" SelectedDate="{Binding Fecha}" Height="30" VerticalContentAlignment="Center" IsEnabled="False" />

        <!--——————————————————————————————————————————————[ BOTON NUEVO ]——————————————————————————————————————————————-->
        <StackPanel Orientation="Horizontal" Height="35" Margin="0,20,0,0" HorizontalAlignment="Center">
            <Button x:Name="NuevoButton" Click="NuevoButton_Click" Width="110">
                <StackPanel Orientation="Horizontal">
                    <Image Height="25" Source="/Imagenes/Nuevo.png"/>
                    <Label Content="Limpiar" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <!--——————————————————————————————————————————————[ BOTON GUARDAR ]——————————————————————————————————————————————-->
            <Button x:Name="GuardarButton"  Width="110" Margin="50,0,0,0" >
                <StackPanel Orientation="Horizontal">
                    <Image Height="30" Source="/Imagenes/Guardar.png"/>
                    <Label Content="Guardar" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <!--——————————————————————————————————————————————[ BOTON ELIMINAR ]——————————————————————————————————————————————-->
            <Button x:Name="EliminarButton" Click="EliminarButton_Click" Width="110" Margin="50,0,0,0" >
                <StackPanel Orientation="Horizontal">
                    <Image Height="30" Source="/Imagenes/Borrar.png"/>
                    <Label Content="Eliminar" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
